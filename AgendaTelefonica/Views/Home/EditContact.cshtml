@model Contact

@{
	ViewData["title"] = "Editar Contato";
}

<h2>Editar o contato @Model.Name</h2>


<form asp-controller="Home" asp-action="UpdateContact" method="POST">
	<input asp-for="Id" value="@Model.Id" id="Id" type="hidden"/>
	<label for="Name">Nome do Contato:</label>
	<input asp-for="Name" value="@Model.Name" id="Name"/>

	<button class="btn btn-primary" type="Submit">Alterar</button>
</form>

@Html.ActionLink("Voltar para a página inicial", "Index", null)